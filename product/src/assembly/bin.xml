<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>wso2gw-${project.version}</baseDirectory>
    <id>gateway</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-kernel-${carbon.kernel.version}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>README.txt</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>release-notes.html</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iwr</exclude>
                <exclude>**/*.eclipse</exclude>
                <!--excluding netty-transport copied from transport feature since product has its own config-->
                <exclude>**/transports/netty-transports.yml</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>..</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>carbon-home/conf/transports</directory>
            <outputDirectory>conf/transports</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/camel</directory>
            <outputDirectory>conf/camel</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/osgi</directory>
            <outputDirectory>conf/osgi</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/resources/security</directory>
            <outputDirectory>resources/security</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/samples</directory>
            <outputDirectory>samples</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>

        <!--adding an empty directory 'camel' for route hot deployment-->
        <fileSet>
            <directory>./</directory>
            <outputDirectory>deployment/camel</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>

    </files>
</assembly>
